{
  "name": "warhorse",
  "version": "0.0.5",
  "description": "A simple, friendly and reliable JavaScript Task Runner... able to crush your enemies!",
  "keywords": [
    "javascript",
    "task",
    "test",
    "runner",
    "build",
    "automate",
    "continuous",
    "development"
  ],
  "author": "Kyle Alexis Sargeant",
  "email": "kasargeant@gmail.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasargeant/warhorse.git"
  },
  "homepage": "https://github.com/kasargeant/warhorse",
  "main": "src/index.js",
  "bin": {
    "warhorse": "./bin/warhorse"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "engines": {
    "node": "~6.10.0",
    "npm": "~3.10.10"
  },
  "scripts": {
    "postinstall": "node ./bin/installTools.js",
    "document-api": "jsdoc -c ./conf/.jsdocrc -r",
    "document-forced-readme": "jsdoc -c ./conf/.jsdocrc -r --readme ./README.md",
    "test": "npm run test-only && npm run test-cover",
    "test-cover": "jest --coverage",
    "test-only": "jest --verbose",
    "test-update": "jest --updateSnapshot"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "jest": {
    "coverageDirectory": "./docs/coverage",
    "setupTestFrameworkScriptFile": "./test/shared/StorageMocks.js",
    "testResultsProcessor": "./node_modules/jest-html-reporter"
  },
  "jest-html-reporter": {
    "pageTitle": "Test Results",
    "outputPath": "docs/tests/index.html",
    "includeFailureMsg": false
  },
  "dependencies": {
    "babel-jest": "^19.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "chalk": "^1.1.3",
    "csso": "^3.1.1",
    "eslint": "^3.19.0",
    "glob": "^7.1.1",
    "inuitcss": "^6.0.0-beta.4",
    "jest": "^19.0.2",
    "jest-cli": "^19.0.2",
    "jest-html-reporter": "^0.1.0",
    "jscs": "^3.0.7",
    "jsdoc": "^3.4.3",
    "jshint": "^2.9.4",
    "less": "^2.7.2",
    "minami": "^1.2.3",
    "minimist": "^1.2.0",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5.2",
    "shelljs": "^0.7.7",
    "uglify-es": "^3.0.3"
  }
}
