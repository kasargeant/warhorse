{
  "name": "warhorse",
  "version": "0.6.8",
  "description": "A simple, friendly and reliable JavaScript Task Runner... able to crush your enemies!",
  "keywords": [
    "javascript",
    "task",
    "test",
    "runner",
    "build",
    "automate",
    "continuous",
    "integration",
    "development"
  ],
  "author": "Kyle Alexis Sargeant",
  "email": "kasargeant@gmail.com",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasargeant/warhorse.git"
  },
  "homepage": "https://github.com/kasargeant/warhorse",
  "main": "src/index.js",
  "bin": {
    "warhorse": "./bin/warhorse"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "engines": {
    "node": "~6.10.0",
    "npm": "~3.10.10"
  },
  "scripts": {
    "docs": "npm run document-coverage",
    "document-api": "jsdoc -c ./conf/jsdoc.json -r",
    "document-forced-readme": "jsdoc -c ./conf/.jsdocrc -r --readme ./README.md",
    "document-coverage": "nyc report --reporter=lcov",
    "bayeux": "bayeux test/js/Warhorse.unit.js",
    "bayeux-cover": "nyc bayeux test/js/Warhorse.unit.js",
    "test": "jest --config ./conf/jest.json --verbose",
    "test-cover": "jest --config ./conf/jest.json --coverage",
    "test-update": "jest --config ./conf/jest.json --updateSnapshot"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "jest-html-reporter": {
    "pageTitle": "Test Results",
    "outputPath": "docs/tests/index.html",
    "includeFailureMsg": false
  },
  "dependencies": {
    "autoprefixer": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "bayeux": "^0.9.1",
    "browserify": "^14.1.0",
    "csso-cli": "^1.0.0",
    "eslint": "^4.1.1",
    "glob": "^7.1.1",
    "handlebars": "^4.0.10",
    "imagemin-cli": "^3.0.0",
    "imagemin-gifsicle": "^5.1.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^5.2.2",
    "inuitcss": "^6.0.0-beta.4",
    "jest": "^20.0.3",
    "jest-html-reporter": "^0.1.0",
    "jscs": "^3.0.7",
    "jsdoc": "^3.4.3",
    "jshint": "^2.9.5",
    "jshint-json": "^1.0.0",
    "less": "^2.7.2",
    "merge": "^1.2.0",
    "minami": "^1.2.3",
    "minimist": "^1.2.0",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5.2",
    "npm": "^4.2.0",
    "nyc": "^11.0.3",
    "pageant": "^0.1.6",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "readline-sync": "^1.4.7",
    "shelljs": "^0.7.8",
    "taffydb": "^2.7.3",
    "tar": "^3.1.5",
    "tinter": "^0.4.5",
    "uglify-es": "^3.0.22",
    "zip-local": "^0.3.4"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "sinon": "^2.3.6"
  }
}
