{
  "name": "warhorse",
  "version": "0.0.13",
  "description": "A simple, friendly and reliable JavaScript Task Runner... able to crush your enemies!",
  "keywords": [
    "javascript",
    "task",
    "test",
    "runner",
    "build",
    "automate",
    "continuous",
    "development"
  ],
  "author": "Kyle Alexis Sargeant",
  "email": "kasargeant@gmail.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasargeant/warhorse.git"
  },
  "homepage": "https://github.com/kasargeant/warhorse",
  "main": "src/index.js",
  "bin": {
    "warhorse": "./bin/warhorse"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "engines": {
    "node": "~6.10.0",
    "npm": "~3.10.10"
  },
  "scripts": {
    "postinstall": "node ./bin/installTools.js",
    "document-api": "jsdoc -c ./conf/.jsdocrc -r",
    "document-forced-readme": "jsdoc -c ./conf/.jsdocrc -r --readme ./README.md",
    "jest": "jest --verbose",
    "jest-update": "jest --updateSnapshot"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "jest": {
    "coverageDirectory": "./docs/coverage",
    "coveragePathIgnorePatterns": [
      "./conf/",
      "./dist/",
      "./src/",
      "./test/data/",
      "./test/shared/"
    ],
    "setupTestFrameworkScriptFile": "./test/shared/MockStorage.js",
    "testResultsProcessor": "./node_modules/jest-html-reporter",
    "testPathIgnorePatterns": [
      "./conf/",
      "./dist/",
      "./src/",
      "./test/data/",
      "./test/shared/"
    ]
  },
  "jest-html-reporter": {
    "pageTitle": "Test Results",
    "outputPath": "docs/tests/index.html",
    "includeFailureMsg": false
  },
  "dependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "csso": "^3.1.1",
    "eslint": "^3.19.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.10",
    "inquirer": "^3.0.6",
    "inuitcss": "^6.0.0-beta.4",
    "jest": "^20.0.3",
    "jest-html-reporter": "^0.1.0",
    "jscs": "^3.0.7",
    "jsdoc": "^3.4.3",
    "jshint": "^2.9.4",
    "less": "^2.7.2",
    "minami": "^1.2.3",
    "minimist": "^1.2.0",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5.2",
    "npm": "^4.2.0",
    "pageant": "0.0.13",
    "shelljs": "^0.7.7",
    "uglify-es": "^3.0.12"
  }
}
